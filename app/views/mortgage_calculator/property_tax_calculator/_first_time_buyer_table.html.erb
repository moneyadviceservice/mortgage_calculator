<table class="mortgagecalc__table stamp-duty__ftb-table">
  <thead>
    <tr>
      <th class="mortgagecalc__table__price">
        <%= I18n.t("#{i18n_locale_namespace}.table.property_price_header") %>
      </th>
      <th class="mortgagecalc__table__rate">
        <%= I18n.t("#{i18n_locale_namespace}.table.rate_header") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% rates.each do |b| %>
      <tr>
        <td class="mortgagecalc__table__price">
          <%= band(b[:start], b[:end]) %>
        </td>
        <td class="mortgagecalc__table__rate">
          <%= b[:rate] %>
          <%= I18n.t("#{i18n_locale_namespace}.results.sentence_suffix") %>
        </td>
      </tr>
    <% end %>

    <tr>
      <td class="mortgagecalc__table__price">
        <%= formatted_currency(rates.last[:end]) %>+
      </td>
      <td class="mortgagecalc__table__rate">
        <%= I18n.t("#{i18n_locale_namespace}.table.standard_rates_apply") %>
      </td>
    </tr>
  </tbody>
</table>
