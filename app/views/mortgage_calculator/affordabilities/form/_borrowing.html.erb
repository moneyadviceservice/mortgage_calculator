<% if @affordability.valid? %>
  <p ng-hide="js" class=" results">
    <%= f.label :borrowing %><%= f.text_field :borrowing %>
  </p>
<% end %>

<p class="rendered-from-js results dynamic-slider-property" id="borrowing-amount">
  {{ repayments.propertyPrice | customCurrency:"£"}}
</p>

<div class="slider" ui-slider min="affordability.minimumBorrowing()" max="affordability.maximumBorrowing()" step="borrowingStepValue" ng-model="repayments.propertyPrice" aria-labelledby="borrowing-amount" analytics-category="Affordability Calculator" analytics-action="Refinement" analytics-label="Borrowing"></div>

<p class="rendered-from-js results">
  {{ affordability.minimumBorrowing() | customCurrency:"£"}}
</p>

<p class="rendered-from-js results">
  {{ affordability.maximumBorrowing() | customCurrency:"£"}}
</p>
