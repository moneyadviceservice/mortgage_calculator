<% if @affordability.valid? %>
  <p ng-hide="js" class="results">
    <%= t "affordability.interest_changer.changes_by_would_increase_html",
           percent: "<strong>#{number_to_percentage interest_rate_change_amount, precision: 0}</strong>".html_safe,
           repayment: "<strong>#{number_to_currency @changer.monthly_payment}</strong>".html_safe %>
  </p>

  <p ng-hide="js" class="results">
    <%= t "affordability.interest_changer.remaining_html",
           remaining: "<strong>#{number_to_currency(@affordability.monthly_net_income - @changer.monthly_payment - @affordability.committed_costs - @affordability.fixed_costs - @affordability.model.lifestyle_costs)}</strong>".html_safe %>
  </p>
<% end %>

<p class="rendered-from-js results">
  <%= t "affordability.interest_changer.changes_by_would_increase_html",
         percent: "<strong>#{number_to_percentage interest_rate_change_amount, precision: 0}</strong>".html_safe,
         repayment: "<strong>{{ repayments.monthlyRepayment(2) | customCurrency:'£' }}</strong>".html_safe %>
</p>

<p class="rendered-from-js results">
  <%= t "affordability.interest_changer.remaining_html",
         remaining: "<strong>{{ affordability.remainingBuffer() | currency:'£' }}</strong>".html_safe %>
</p>

