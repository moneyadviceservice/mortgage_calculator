<% if @affordability.valid? %>
  <p ng-hide="js" class="results t-what-if-changes">
    <%= t "affordability.interest_changer.changes_by_would_increase_html",
           percent: interest_rate_change_amount,
           repayment: "<strong>#{number_to_currency @changer.monthly_payment}</strong>".html_safe %>
  </p>

  <p ng-hide="js" class="results t-what-if-remaining">
    <%= t "affordability.interest_changer.remaining_html",
           remaining: "<strong>#{number_to_currency(@affordability.monthly_net_income - @changer.monthly_payment - @affordability.committed_costs - @affordability.fixed_costs - @affordability.lifestyle_costs)}</strong>".html_safe %>
  </p>
<% end %>

<p class="rendered-from-js results t-what-if-changes-js">
  <%= t "affordability.interest_changer.changes_by_would_increase_html",
         percent: interest_rate_change_amount,
         repayment: "<strong>{{ affordability.monthlyRepaymentAfterDefaultInterestRateChange() | customCurrency:'£' }}</strong>".html_safe %>
</p>

<p class="rendered-from-js results t-what-if-remaining-js">
  <%= t "affordability.interest_changer.remaining_html",
         remaining: "<strong>{{ affordability.remainingPerMonthAfterDefaultInterestRateChange() | customCurrency:'£' }}</strong>".html_safe %>
</p>
