
<div ng-controller="CalculatorCtrl">
  <h1>How much stamp duty will I have to pay?</h1>

    <form name="stamp_duty_form" role="form" novalidate>

      <fieldset>
        <label for="propertyPrice">
          Property Price
          </label>
        <input type="text" ng-pattern="/^\d+$/" name="propertyPrice" class="form-control" ng-model="stampDuty.propertyPrice" placeholder="The cost of the property" required autofocus />
      </fieldset>

  </form>

  <div ng-show="stampDuty.propertyPrice">
    <p >
      Based on your total purchase price of
      <span class='label label-primary'>{{ stampDuty.propertyPrice | currency:"£" }}</span>,
      you will have to pay
      <span class='label label-primary'>{{ stampDuty.rate | currency:"£" }}</span>
      in stamp duty, costing
      <span class='label label-primary'>{{ stampDuty.cost | currency:"£" }}</span>.
      Bringing your total spend to
      <span class='label label-primary'>{{ stampDuty.totalPurchase()  | currency:"£" }}</span>.
    </p>
  </div>
</div>
