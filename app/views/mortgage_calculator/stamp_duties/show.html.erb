<%= render 'header' %>

<div ng-controller="CalculatorCtrl" class="mortgagecalc__container ">
  <% @stamp_duty.errors.full_messages.each do |m| %>
    <span style="color:red;"><%= m %></span>
  <% end %>

  <div wizard on-finish="finishedWizard()" hide-indicators='true'>
    <div wz-step >
      <%= render 'form_step1' %>
    </div>

    <div wz-step >
      <div class="rendered-from-js">
        <%= render 'calc_left_panel' if @stamp_duty.valid? %>
        <%= render 'calc_right_panel' %>

        <div class="mortgagecalc__panel mortgagecalc__panel--full" ng-show="expandedMortgageInformation">
          <%= render 'stamp_duty_tip' %>
        </div>
      </div>
    </div>

    <div wz-step >
      <div class="rendered-from-js">
        <%= render 'next_steps_content' %>
      </div>
    </div>
  </div>
</div>

<%= render 'caveat' %>

<div class="mortgagecalc__feedback"><%= zendesk_feedback_tab(zendesk_stamp_duty_config) %></div>

