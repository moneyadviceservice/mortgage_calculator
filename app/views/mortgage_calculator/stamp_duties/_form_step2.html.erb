<%= form_for @stamp_duty, url: stamp_duty_path, html: { name: 'stamp_duty_form', role: 'form', class: 'step_two' } do |f| %>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price,
                     class: 'dynamic-slider-property',
                     "ng-model" => "stampDuty.propertyPrice",
                     "placeholder" => "£0.00",
                     "currency" => '',
                     "data-a-sign" =>"£",
                     "data-m-dec" =>"0" %>

    <div class="slider" ui-slider dynamic-for='dynamic-slider-property' ng-model="stampDuty.propertyPrice"></div>
  </div>

  <div class="hide-with-js">
    <p><br><%= f.submit I18n.t("mortgage_calculator.stamp_duty.recalculate"),
                        'class' => 'button',
                        'wz-next' => '' %></p>
  </div>

  <p><a href="#" class='button mortgagecalc__submit previous rendered-from-js' ng-click="navigateAndFocus($event, 'previous')" /><%= I18n.t('mortgage_calculator.stamp_duty.back') %></a></p>

  <p><%= link_to I18n.t('mortgage_calculator.stamp_duty.next'), next_steps_stamp_duty_path, class: "button button--primary mortgagecalc__submit",
                                                                    'wz-next' => '' %></p>

<% end %>

