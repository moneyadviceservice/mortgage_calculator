<div class="morgagecalc__panel">
  <h4><%= link_to I18n.t("repayment.tabs.repayment.title"), "#" %></h4>

  <p><%= number_to_currency @repayment.monthly_payment %> <%= I18n.t("repayment.a_month") %></p>

  <p><%= I18n.t("repayment.tabs.repayment.tip_1") %></p>
  <p><%= I18n.t("repayment.tabs.repayment.tip_2") %></p>

  <h4><%= link_to I18n.t("repayment.tabs.interest_only.title"), "#" %></h4>

  <p><%= number_to_currency @interest_only.monthly_payment %> <%= I18n.t("repayment.a_month") %></p>

  <div class="callout">
    <h4><%= I18n.t("repayment.interest_changer.title") %></h4>
    <p><%= I18n.t("repayment.interest_changer.intro", change: 1) %></p>

    <p><%= number_to_currency @changer.monthly_payment %></p>
  </div>
</div>

<div class="morgagecalc__panel">
  <%= render 'form_step2' %>

  <p><%= link_to I18n.t('repayment.next'), next_steps_repayment_path, class: "button button--primary mortgagecalc__submit" %></p>
</div>
