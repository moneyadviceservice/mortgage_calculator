<h2 class="mortgagecalc__heading"><%= I18n.t("repayment.step_1.intro") %></h2>

<%= form_for @repayment, url: repayment_path do |f| %>
  <div class="mortgagecalc__panel">
    <div>
      <%= f.label :price %>
      <%= f.text_field :price,
                      "ng-model" => "repayments.propertyPrice",
                      "placeholder" => "eg 20,000",
                      "currency" => '',
                      "data-a-sign" =>"£" %>
    </div>
  </div>

  <div class="mortgagecalc__panel mortgagecalc__panel--with-form">
    <div>
      <%= f.label :deposit %>
      <%= f.text_field :deposit,
                       "ng-model" => "repayments.deposit",
                       "placeholder" => "eg 10,000",
                       "currency" => '',
                       "data-a-sign" =>"£" %>
    </div>

    <%= f.submit I18n.t("repayment.next"), class: "button button--primary mortgagecalc__submit",
                                           'wz-next' => '',
                                           'ng-disabled' => '!repayments.propertyPrice' %>


    <div ng-class="{ 'visibly-hidden' : !repayments.propertyPrice }" class="callout">
      <%= I18n.t("repayment.tips.hidden_costs") %>
    </div>
  </div>

<% end %>
