<%= form_for @repayment, url: repayment_path do |f| %>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :deposit %>
    <%= f.text_field :deposit %>
  </div>

  <%= f.submit I18n.t("repayment.next") %>
<% end %>

