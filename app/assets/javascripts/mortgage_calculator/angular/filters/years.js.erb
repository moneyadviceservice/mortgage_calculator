App
  .filter('years', function() {
    return function(input) {
      var translations = {
        'en':  '<%= I18n.t('mortgage_calculator.repayment.years', locale: :en) %>',
        'cy': '<%= I18n.t('mortgage_calculator.repayment.years', locale: :cy) %>'
      };

      var locale = $('html').attr('lang')

      if (input) {
        return input + ' ' + translations[locale];
     }
    };
  });
